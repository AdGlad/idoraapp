<%- model_class = Identity -%>
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
  <div align="center">
  <%= will_paginate %>
  </div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:picture) %></th>
      <th><%= model_class.human_attribute_name(:dob) %></th>
      <th><%= model_class.human_attribute_name(:team) %></th>
      <th><%= model_class.human_attribute_name(:desc) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @identities.each do |identity| %>
      <tr>
        <td><%= identity.name %></td>
        <td><%= image_tag(identity.picture.url, size: "50x50") if identity.picture? %></dd>
        <td><%= identity.dob %></td>
        <td><%= identity.team %></td>
        <td><%= identity.desc %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      identity_path(identity), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_identity_path(identity), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      identity_path(identity),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_identity_path,
            :class => 'btn btn-primary' %>
