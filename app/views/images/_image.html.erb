<%- model_class = Image -%>
  <div align="center">
  <%= will_paginate @images%>
  </div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:picture) %></th>
    </tr>
  </thead>
  <tbody>
    <% @images.each_slice(3) do |image| %>
      <tr>
         <% image.each do |image| %>
          <td><%= link_to image_tag(image.picture.url ,:width=>"200" ), image_path(image) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_image_path,
            :class => 'btn btn-primary' %>


