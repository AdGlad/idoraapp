<%- model_class = Image -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
</div>
  <div align="center">
  <%= will_paginate %>
  </div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:picture) %></th>
      <th><%= model_class.human_attribute_name(:matchid) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @images.each do |image| %>
      <tr>
      <td><%= link_to image.name, image_path(image) %></td>
      <td><%= image_tag image.picture.url, size:"50x50" %></td>
      <td><%= link_to image.name, image_path(image) %></td>
      <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_image_path(image), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.image', :default => t("helpers.links.image")), image_path(image), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      image_path(image),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% @images.in_groups_of(3) do |row| %>
  <div class="row">
    <% row.each_with_index do |image, index| %>
      <div class="item-wrapper">
        <% if image %>
          <a class="flex-item" <img class="photo" src="<%= image.picture.url %>" alt="" /></a>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_image_path,
            :class => 'btn btn-primary' %>
