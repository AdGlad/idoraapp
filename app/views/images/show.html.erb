<%- model_class = Image -%>
<dl class="dl-horizontal">
<dt></dt>
<dd><%= image_tag(@image.picture.url, size: "200x200") if @image.picture? %></dd>
</dl>
<% if @image.identities.any? %>
  <p> Identity Matches: <%= render @image.identities %></p>
<% end %>
<% if @image.tags.any? %>
  <p> Tags: <%= render @image.tags %></p>
<% end %>
<%= link_to t('.match', :default => t("helpers.links.match")), image_match_path(@image), :class => 'btn btn-default ' %>
<%= link_to t('.back', :default => t("helpers.links.back")), images_path, :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")), image_path(@image), :method => 'delete',
               :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are You Sure?')) },
               :class => 'btn btn-danger' %>
